{
  "compilerOptions": {
    "target": "es2016",
    "allowJs": true,
    "experimentalDecorators": true,                   
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "outDir": "./dist", 
    "esModuleInterop": true,                        
    "forceConsistentCasingInFileNames": true,           
    "strict": true, 
    "skipLibCheck": true                                
  },
  "include": [
    "**/*",
    "./src/**/*.ts",
    "./src/**/*.js"
  ]
}
